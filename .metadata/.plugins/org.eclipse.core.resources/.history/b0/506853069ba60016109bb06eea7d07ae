	public ArrayList<String> nonWordList() {
		ArrayList<String> nonWordList = new ArrayList<>();
		nonWordList.add("+");
		nonWordList.add("-");
		nonWordList.add(".");
		nonWordList.add(",");
		nonWordList.add("!");
		nonWordList.add("@");
		nonWordList.add("#");
		nonWordList.add("$");
		nonWordList.add("\'");
		nonWordList.add("^");
		nonWordList.add("&");
		nonWordList.add("*");
		nonWordList.add("(");
		nonWordList.add(")");
		nonWordList.add(";");
		nonWordList.add("\\");
		nonWordList.add("/");
		nonWordList.add("|");
		nonWordList.add(">");
		nonWordList.add("<");
		nonWordList.add("?");
		nonWordList.add("\"");
		nonWordList.add(":");
		nonWordList.add("`");
		nonWordList.add("~");
		nonWordList.add("\"");
		nonWordList.add("[");
		nonWordList.add("]");
		nonWordList.add("{");
		nonWordList.add("}");
		return nonWordList;
	}

